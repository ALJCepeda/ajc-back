{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",

    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
